<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.besiktasshipyard.mobile.btys.fragments.hr.users.UserDetailsFragment"
    android:scrollbars="none"
    >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Kisisel Bilgiler -->
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            >
            <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/fragment_contractor_worker_details_cardviewDescLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/personal_data"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginLeft="8dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginStart="8dp" />
                <ImageView
                    android:id="@+id/ivContractorWorkerDetails_UserPicture"
                    android:layout_width="90dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="@dimen/layout_default_margin"
                    android:adjustViewBounds="false"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:srcCompat="@drawable/ic_person_black_24dp"
                    app:layout_constraintTop_toBottomOf="@+id/fragment_contractor_worker_details_cardviewDescLabel"
                    android:layout_marginStart="@dimen/layout_default_margin"
                    android:background="@drawable/dashed_border_frame"
                    />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/layout_default_margin"
                    app:layout_constraintLeft_toRightOf="@+id/ivContractorWorkerDetails_UserPicture"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="@dimen/layout_default_margin"
                    android:layout_marginRight="@dimen/layout_default_margin"
                    app:layout_constraintRight_toRightOf="parent"
                    android:id="@+id/textInputLayout_ContractorWorkerDetails_etUsername"
                    app:layout_constraintHorizontal_bias="0.0"
                    android:layout_marginStart="@dimen/layout_default_margin"
                    android:layout_marginEnd="@dimen/layout_default_margin">

                    <EditText
                        android:id="@+id/fragment_contractor_worker_name_surname"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/name_surname"
                        android:maxLines="1"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_default_margin"
                    android:layout_marginRight="@dimen/layout_default_margin"
                    android:id="@+id/textInputLayout_etDutyName"
                    android:layout_marginStart="@dimen/layout_default_margin"
                    android:layout_marginEnd="@dimen/layout_default_margin"
                    android:layout_marginLeft="8dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/ivContractorWorkerDetails_UserPicture"
                    app:layout_constraintTop_toBottomOf="@id/textInputLayout_ContractorWorkerDetails_etUsername"
                    >

                    <EditText
                        android:id="@+id/etContractorWorkerDetails_DutyName"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/duty"
                        android:maxLines="2"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp"
                    android:id="@+id/textInputLayout_ContractorWorkerDetails_etSectionName"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="@dimen/layout_default_margin"
                    android:layout_marginLeft="@dimen/layout_default_margin"

                    app:layout_constraintTop_toBottomOf="@+id/ivContractorWorkerDetails_UserPicture"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintRight_toRightOf="parent">

                    <EditText
                        android:id="@+id/etContractorWorkerDetails_Contractorname"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/contractor"
                        android:maxLines="2"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        />
                </android.support.design.widget.TextInputLayout>
            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>

        <!-- Iletisim Bilgileri -->
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            >
            <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/fragment_contractor_worker_details_cardviewDescLabel2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/communication_data_personal"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginLeft="@dimen/layout_default_margin"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginStart="@dimen/layout_default_margin" />
                <Button
                    android:id="@+id/btnContractorWorkerDetails_Tel1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_phone_black_24dp"
                    android:drawablePadding="@dimen/text_margin"
                    android:layout_marginLeft="271dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/fragment_contractor_worker_details_cardviewDescLabel2"
                    android:layout_marginStart="@dimen/layout_default_margin"
                    android:layout_marginTop="4dp" />

                <Button
                    android:id="@+id/btnContractorWorkerDetails_Tel2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_phone_black_24dp"
                    android:drawablePadding="@dimen/text_margin"
                    android:layout_marginLeft="271dp"
                    android:layout_marginTop="-13dp"
                    app:layout_constraintLeft_toRightOf="@+id/btnContractorWorkerDetails_Tel1"
                    android:layout_marginStart="@dimen/layout_default_margin"
                    app:layout_constraintTop_toTopOf="@+id/btnContractorWorkerDetails_Tel1" />


                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/layout_default_margin"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginRight="@dimen/layout_default_margin"
                    app:layout_constraintRight_toRightOf="parent"
                    android:id="@+id/textInputLayout_etAddress"
                    app:layout_constraintHorizontal_bias="0.0"
                    android:layout_marginStart="@dimen/layout_default_margin"
                    android:layout_marginEnd="@dimen/layout_default_margin"
                    android:layout_marginTop="@dimen/layout_default_margin"
                    app:layout_constraintTop_toBottomOf="@+id/btnContractorWorkerDetails_Tel2">

                    <EditText
                        android:paddingLeft="@dimen/address_text_icon_margin"
                        android:drawablePadding="@dimen/activity_horizontal_margin"
                        android:id="@+id/etContractorWorkerDetails_Address"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:autoLink="email"
                        android:clickable="true"
                        android:cursorVisible="false"
                        android:drawableLeft="@drawable/ic_location_city_black_24dp"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:hint="@string/address"
                        android:inputType="textMultiLine"
                        android:maxLines="4"
                        />
                </android.support.design.widget.TextInputLayout>
            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>

        <!-- Durum Bilgileri -->
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            android:visibility="gone"
            >
            <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/fragment_contractor_worker_details_cardviewDescLabel4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/status"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginLeft="@dimen/layout_default_margin"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginStart="@dimen/layout_default_margin" />
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textInputLayout_etStatus_Contractor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/fragment_contractor_worker_details_cardviewDescLabel4"
                    android:layout_marginTop="@dimen/layout_default_margin"
                    android:layout_marginStart="@dimen/layout_default_margin"
                    android:layout_marginEnd="@dimen/layout_default_margin"
                    android:layout_marginLeft="8dp"
                    app:layout_constraintLeft_toLeftOf="parent">

                    <EditText
                        android:id="@+id/etStatus"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/where"
                        android:maxLines="1"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textInputLayout_etLastExit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/fragment_contractor_worker_details_cardviewDescLabel4"
                    android:layout_marginTop="@dimen/layout_default_margin"
                    android:layout_marginStart="@dimen/layout_default_margin"
                    android:layout_marginEnd="@dimen/layout_default_margin"
                    android:layout_marginLeft="8dp"
                    app:layout_constraintLeft_toRightOf="@id/textInputLayout_etStatus_Contractor">

                    <EditText
                        android:id="@+id/etLastExit"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/last_exit"
                        android:maxLines="1"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/fragment_contractor_worker_details_cardviewDescLabel4"
                    android:layout_marginTop="@dimen/layout_default_margin"
                    android:layout_marginStart="@dimen/layout_default_margin"
                    android:layout_marginEnd="@dimen/layout_default_margin"
                    app:layout_constraintLeft_toRightOf="@id/textInputLayout_etLastExit"
                    android:id="@+id/textInputLayout_etLastEnter"
                    >

                    <EditText
                        android:id="@+id/etLastEnter"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/last_enter"
                        android:maxLines="1"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        />
                </android.support.design.widget.TextInputLayout>
            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>