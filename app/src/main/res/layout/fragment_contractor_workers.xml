<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        >

        <!-- Bir kartin layoutu -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/cardview_padding"
            android:paddingLeft="@dimen/cardview_padding"
            android:paddingRight="@dimen/cardview_padding"
            android:paddingTop="@dimen/cardview_padding">

            <TextView
                android:id="@+id/fragment_contractor_worker_name_surname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"

                android:text="Ad Soyad"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <!-- Yuklenici Adi -->
            <TextView
                android:id="@+id/fragment_contractor_worker_contractor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fragment_contractor_worker_name_surname"

                android:text="Yuklenici:-"
                tools:ignore="HardcodedText" />

            <!-- Gorev, asagida -->
            <TextView
                android:id="@+id/fragment_contractor_worker_profession_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fragment_contractor_worker_contractor_name"

                android:text="Gorev"
                tools:ignore="HardcodedText" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
