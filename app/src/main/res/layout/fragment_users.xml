<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        >

        <!-- Bir kartin layoutu -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/cardview_padding"
            android:paddingLeft="@dimen/cardview_padding"
            android:paddingRight="@dimen/cardview_padding"
            android:paddingTop="@dimen/cardview_padding">

            <!-- Kullanicinin fotosu -->
            <!-- ImageView
                android:id="@+id/person_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="@dimen/cardview_layout_margin"
                android:layout_marginRight="@dimen/cardview_layout_margin"
                android:adjustViewBounds="false"
                android:cropToPadding="false"
                android:src="@mipmap/ic_launcher"
                tools:ignore="ContentDescription"
                / -->

            <!-- Kisi Ad Soyad, tepede android:textSize="@dimen/material_text_title" android:textSize="@dimen/material_text_subhead"-->
            <!--
                android:layout_toEndOf="@+id/person_photo"
                android:layout_toRightOf="@+id/person_photo"

                **

                android:layout_toEndOf="@+id/person_photo"
                android:layout_toRightOf="@+id/person_photo"
            -->
            <TextView
                android:id="@+id/name_surname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"

                android:text="Ad Soyad"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <!-- Bolum Adi -->
            <TextView
                android:id="@+id/tvCardView_SectionName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name_surname"

                android:text="Bolum:-"
                tools:ignore="HardcodedText" />

            <!-- Gorev, asagida -->
            <TextView
                android:id="@+id/profession_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvCardView_SectionName"

                android:text="Gorev"
                tools:ignore="HardcodedText" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
